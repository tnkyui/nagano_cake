<div class="container">
  <div class="row my-5">
    <div class="col ml-5">
      <h5><span class="bg-light">ショッピングカート</span></h5>
    </div>
    <div class="col text-right">
      <%= link_to "カートを空にする", class: "btn btn-danger btn-sm" %>
    </div>
  </div>

  <div class="row">
    <table class="table table-bordered">
      <tbody>
        <tr class="bg-light">
          <td>商品名</td>
          <td>単価(税込)</td>
          <td>数量</td>
          <td>小計</td>
          <td></td>
        </tr>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.add_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td></td>
          <td><%= link_to "削除する", class: "btn btn-danger btn-sm" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>