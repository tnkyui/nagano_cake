<div class="container">
  <div class="row my-5">
    <div class="col ml-5">
      <h5><span class="bg-light">ショッピングカート</span></h5>
    </div>
    <div class="col text-right">
      <%= link_to "カートを空にする", class: "btn btn-danger btn-sm" %>
    </div>
  </div>

  <div class="row">
    <table class="table table-bordered">
      <tbody>
        <tr class="bg-light">
          <td>商品名</td>
          <td>単価(税込)</td>
          <td>数量</td>
          <td>小計</td>
          <td></td>
        </tr>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.add_tax_price %></td>
          <td class="text-center">
            <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
              <%= f.select :amount, *[1..10] %>
              <%= f.submit "変更", class: "btn btn-success btn-sm align-baseline" %>
            <% end %>
          </td>
          <td><%= cart_item.subtotal %></td>
          <td class="text-center">
            <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col my-auto">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary btn-sm" %>
    </div>
    <div class="col d-right p-0">
      <table class="table table-bordered my-auto">
        <tbody>
          <tr>
            <td class="bg-light">合計金額</td>
            <td>合計金額</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mt-5">
    <div class="mx-auto">
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
    </div>
  </div>
</div>