<div class="container">
  <div class="row m-5">
    <h5><span class="bg-light">配送先登録/一覧</span></h5>
  </div>

  <div class="row">
    <div class="col-10">
      <% if @address.errors.any? %>
        <ul class="text-danger">
          <% @address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @address do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td class="align-middle">郵便番号(ハイフンなし)</td>
            <td><%= f.text_field :postal_code, placeholder: "0000000", style: "width:100%" %></td>
          </tr>
          <tr>
            <td class="align-middle">住所</td>
            <td colspan="2"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", style: "width:100%" %></td>
          </tr>
          <tr>
            <td class="align-middle">宛名</td>
            <td><%= f.text_field :name, placeholder: "令和道子", style: "width:100%" %></td>
            <td style="width: 30%"></td>
            <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-9">
      <table class="table table-bordered">
        <tbody class="">
          <tr class="bg-light">
            <td>郵便番号</td>
            <td>住所</td>
            <td>宛名</td>
            <td></td>
          </tr>
          <tr>
          <% @addresses.each do |address| %>

            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td align="center" class="text-nowrap">
              <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success btn-sm" %>
              <%= link_to "削除する", address_path(address.id), method: :delete, class: "ml-2 btn btn-danger btn-sm" %>
            </td>

          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>