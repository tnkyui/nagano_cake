<div class="container">
  <div class="row m-5">
    <h5><span class="bg-light">新規会員登録</span></h5>
  </div>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col-10">
      <table  class="table table-borderless">
        <tbody>
          <tr>
            <td class="small">名前</td>
            <td class="text_right small">(姓)</td>
            <td><%= f.text_field :last_name, autofocus: true, placeholder: "令和", style: "width:100%" %></td>
            <td class="text_right small">(名)</td>
            <td><%= f.text_field :first_name, placeholder: "道子", style: "width:100%" %></td>
          </tr>
          <tr>
            <td class="small">フリガナ</td>
            <td class="text_right small">(セイ)</td>
            <td><%= f.text_field :last_name_kana, placeholder: "レイワ", style: "width:100%" %></td>
            <td class="text_right small">(メイ)</td>
            <td><%= f.text_field :first_name_kana, placeholder: "ミチコ", style: "width:100%" %></td>
          </tr>
          <tr>
            <td class="small">メールアドレス</td>
            <td></td>
            <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", style: "width:100%" %></td>
          </tr>
          <tr>
            <td class="small">郵便番号(ハイフンなし)</td>
            <td></td>
            <td><%= f.text_field :postal_code, placeholder: "0000000", style: "width:100%" %></td>
          </tr>
          <tr>
            <td class="small">住所</td>
            <td></td>
            <td colspan="3"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", style: "width:100%" %></td>
          </tr>
          <tr>
            <td class="small">電話番号(ハイフンなし)</td>
            <td></td>
            <td><%= f.text_field :telephone_number, placeholder: "00000000000", style: "width:100%" %></td>
          </tr>
          <tr>
            <td class="small">パスワード(6文字以上)</td>
            <td></td>
            <td><%= f.password_field :password, autocomplete: "new-password", style: "width:100%" %></td>
          </tr>
          <tr>
            <td class="small">パスワード(確認用)</td>
            <td></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password", style: "width:100%" %></td>
          </tr>
        </tbody>
        <tfoot>
          <tr>
            <td></td>
            <td></td>
            <td class="py-3"><%= f.submit "新規登録", class: "btn btn-success btn-block" %></td>
          </tr>
        </tfoot>
      </table>
<% end %>
    </div>
  </div>
  <div class="row m-3">
    <h5><span class="bg-light">既に登録済みの方</span></h5>
  </div>
  <div class="row ml-5">
    <p>
      <u><%= link_to "こちら", customer_session_path %></u>　からログインしてください。
    </p>
  </div>
</div>
<%= render "public/shared/links" %>
