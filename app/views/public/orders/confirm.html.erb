<div class="container">
  <div class="row mt-5 mx-5">
    <h5><span class="bg-light">注文情報入力</span></h5>
  </div>

  <div class="row">
    <div class="col offset-1">
      <table class="table table-bordered">
        <tbody>
          <tr class="bg-light">
            <td>商品名</td>
            <td>単価(税込)</td>
            <td>数量</td>
            <td>小計</td>
          </tr>
          <% @cart_items.each do |cart_item| %>
          <% @total += cart_item.subtotal_intenger %>
          <tr>
            <td>
              <strong><%= cart_item.item.name %></strong>
            </td>
            <td><%= cart_item.item.add_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="bg-light">送料</td>
            <td></td>
          </tr>
          <tr>
            <td class="bg-light">商品合計</td>
            <td><%= @total.to_s(:delimited) %></td>
          </tr>
          <tr>
            <td class="bg-light">請求金額</td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <dl class="row">
    <dt class="col">支払方法</dt>
    <dd class="col"><%= @order.payment_method_i18n %></dd>
  </dl>
  <dl class="row">
    <dt class="col">お届け先</dt>
    <dd class="col">
        〒<%= @order.postal_code %>　<%= @order.address %><br>
        <%= @order.name %>
    </dd>
  </dl>
</div>