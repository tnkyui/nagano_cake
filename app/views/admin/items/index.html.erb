<div class="container">
  <div class="row my-5">
    <div class="col ml-5">
      <h5><span class="bg-light">商品一覧</span></h5>
    </div>
    <div class="col text-right">
      <%= link_to new_admin_item_path do %>
        <button type="button" class="btn btn-outline-secondary rounded-circle p-0 shadow-sm" style="width:2rem;height:2rem;">＋</button>
      <% end %>
    </div>
  </div>

  <div class="row">
    <table class="table">
      <thead class="bg-light">
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </thead>
      <tbody class="table-borderless">
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id), class: "text-dark text-decoration-underline" do %>
              <u><%= item.name %></u>
            <% end %>
          </td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <th>
            <% if item.is_active == true %>
              <span class="text-success">販売中</span>
            <% elsif item.is_active == false %>
              <span class="text-secondary">販売停止中</span>
            <% end %>
          </th>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%= paginate @items %>
    </div>
  </div>
</div>