<div class="container">
  <div class="row m-5">
    <h5><span class="bg-light">商品編集</span></h5>
  </div>

  <div class="row">
    <div class="col-8 mx-auto">
      <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f|%>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td><%= f.label "商品画像" %></td>
            <td>
              <%= f.file_field :image, accept: "image/*" %>
            </td>
          </tr>
          <tr>
            <td><%= f.label "商品名" %></td>
            <td>
              <%= f.text_field :name, placeholder: "商品名", class: "form-control" %>
            </td>
          </tr>
          <tr>
            <td><%= f.label "商品説明" %></td>
            <td>
              <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: "form-control" %>
            </td>
          </tr>
          <tr>
            <td><%= f.label "ジャンル" %></td>
            <td>
              <%= f.collection_select :genre_id, @genres, :id, :name, { prompt: "--選択してください--" }, class: "form-control" %>
            </td>
          </tr>
          <tr>
            <td><%= f.label "税抜価格" %></td>
            <td>
              <%= f.text_field :price, placeholder: "1000", class: "form-control" %>
            </td>
            <td>円</td>
          </tr>
          <tr>
            <td><%= f.label "販売ステータス" %></td>
            <td>
              <%= f.radio_button :is_active, :true, checked: true %>販売中　<%= f.radio_button :is_active, :false %>販売停止中
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
      <% end %>
  </div>
</div>