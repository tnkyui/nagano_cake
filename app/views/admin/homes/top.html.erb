<h2>注文履歴一覧</h2>


<table>
  <thead>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.customer.full_name %></td>
      <td><%= order.order_details.count %></td>
      <td><%= order.order_status %></td>
    </tr>
  </tbody>
  <% end %>
</table>
<%= paginate @orders %>
