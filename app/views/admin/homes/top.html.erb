<div class="container">
  <div class="row m-5">
    <h5><span class="bg-light">注文履歴一覧</span></h5>
  </div>

  <div class="row">
    <table class="table">
      <thead class="bg-light">
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to admin_order_path(order.id), class: "text-dark" do %>
              <u><%= order.created_at %></u>
            <% end %>
          </td>
          <td><%= order.customer.full_name %></td>
          <td><%= order.order_details.count %></td>
          <td><%= order.order_status %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
     <div class="mx-auto">
      <%= paginate @orders %>
    </div>
  </div>
</div>