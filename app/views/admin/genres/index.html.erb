<div class="container">
  <div class="row m-5">
    <h5><span class="bg-light">ジャンル一覧・追加</span></h5>
  </div>

  <% if @genre.errors.any? %>
    <ul class="text-danger">
      <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
  <div class="row">
    <div class="col-2 small align-middle">ジャンル名</div>
    <div class="col-4">
      <%= f.text_field :name, placeholder: "ジャンル名", style: "width:100%" %>
    </div>
    <div class="col-3">
      <%= f.submit "新規登録", class: "btn btn-success btn-sm" %>
    </div>
  </div>
  <% end %>

  <div class="row mt-5">
    <div class="col-5">
      <table class="table">
        <thead class="bg-light">
          <th class="text-center">ジャンル</th>
          <th></th>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success btn-sm" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>