<div class="container">
  <div class="row m-5">
    <h5><span class="bg-light">ジャンル編集</span></h5>
  </div>

  <% if @genre.errors.any? %>
    <ul class="text-danger">
      <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
  <div class="row">
    <div class="col-2 small align-middle">ジャンル名</div>
    <div class="col-4">
      <%= f.text_field :name, placeholder: "ジャンル名", style: "width:100%" %>
    </div>
    <div class="col-3">
      <%= f.submit "変更を保存", class: "btn btn-success btn-sm" %>
    </div>
  </div>
  <% end %>
</div>