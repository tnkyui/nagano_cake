<div class="container">
  <div class="row m-5 pl-5">
    <h5><span class="bg-light">管理者ログイン</span></h5>
  </div>

  <%= form_with model: @admin, url: admin_session_path do |f| %>
    <div class="row mb-3 justify-content-center">
      <div class="col-2">
        <%= f.label "メールアドレス" %>
      </div>
      <div class="col-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-5 justify-content-center">
      <div class="col-2">
        <%= f.label "パスワード" %>
      </div>
      <div class="col-5">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-2 mx-auto">
        <%= f.submit "ログイン", class: "btn btn-primary btn-block"%>
      </div>
    </div>
  <% end %>

  <%= render "admin/shared/links" %>
</div>