<div class="container">
  <div class="row m-5">
    <h5><span class="bg-light"><%= @customer.full_name %>さんの会員詳細</span></h5>
  </div>

  <div class="row">
    <div class="col-10">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %> <%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td colspan="3"><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td><%= @customer.is_active ? "退会" : "有効" %></td>
          </tr>
        </tbody>
        <tfoot>
          <tr>
            <td></td>
            <td>
              <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %>
            </td>
            <td>
              <%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-primary" %>
            </td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>