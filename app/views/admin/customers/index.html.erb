<div class="container">
  <div class="row m-5">
    <h5><span class="bg-light">会員一覧</span></h5>
  </div>

  <div class="row">
    <table class="table">
      <thead class="bg-light">
        <th>会員ID</th>
        <th><u>氏名</u></th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td>
            <%= customer.id %>
          </td>
            <td>
            <%= link_to admin_customer_path(customer.id), class: "text-dark" do %>
              <u><%= customer.full_name %></u>
            <% end %>
          </td>
          <td>
            <%= customer.email %>
          </td>
          <th>
            <% if customer.is_active == false %>
              <span class="text-success">有効</span>
            <% elsif customer.is_active == true %>
              <span class="text-secondary">退会</span>
            <% end %>
          </th>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%= paginate @customers %>
    </div>
  </div>
</div>