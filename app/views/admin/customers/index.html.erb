<h2>会員一覧</h2>


<table>
  <thead>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td>
        <%= customer.id %>
      </td>
      <td>
        <%= customer.full_name %>
      </td>
      <td>
        <%= customer.email %>
      </td>
      <td>
        <%= customer.is_active ? "退会" : "有効" %>
      </td>
    </tr>
    <% end %>
  </tbody>
  <%= paginate @customers %>
</table>
